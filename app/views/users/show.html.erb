<% if @events.upcoming %>
  <h1>Upcoming</h1>
  <ol>
    <% @events.upcoming.each do |e| %>
      <li><%= link_to "#{e.name}", event_path(e)%></li>
    <% end %>
  </ol>
<% end %>

<% if @events.past %>
  <h1>Attended</h1>
  <ol>
    <% @events.past.each do |e| %>
      <li><%= link_to "#{e.name}", event_path(e)%></li>
    <% end %>
  </ol>
<% end %>
